<div class="row signin-container">
  <div class="medium-6 columns small-centered end">
    <div class="card">
      <div class="content">

        <div class="title text-center">
          Forgot your password?
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
            <div class="text-field-error">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, required: true %>
            </div>

          <div>
            <%= f.submit "Send me reset password instructions", class: "button expand" %>
          </div>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
    <br />
  </div>
</div>
