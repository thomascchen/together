<div class="row signin-container">
  <div class="medium-6 small-centered columns end">
    <div class="card">
      <div class="content">
        <div class="title text-center">
          Welcome
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="text-field-error">
            <%= f.label :email %>
            <%= f.email_field :email, required: true, autofocus: true %>
          </div>
          <div class="text-field-error">
            <%= f.label :password %>
            <%= f.password_field :password, required: true, autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div>
            <%= f.submit "Sign In", class: "button expand" %>
          </div>
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
    <br />
  </div>
</div>
