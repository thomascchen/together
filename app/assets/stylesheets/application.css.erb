//= depend_on_asset "material_design_city.jpg"

.tags {
  font-size: 10pt;
}

div.field_with_errors {
  display: inline-block;
}

div.field_with_errors > label.radio-error {
  display: inline-block;
  margin-left: 8px;
  margin-right: 16px;
}

div.radio-error > div.field_with_errors {
  display: inline-block;
}

.text-field-error > div {
  display: block;
}

.vote {
  margin-right: 2%;
  margin-top: 3.5%;
}

.important {
  color: black;
}

html, body {
  background-image: url('<%= asset_path('material_design_city.jpg') %>');
  background-size: cover;
  background-attachment: fixed;
  background-color: #FAFAFA;
}

.signin-container {
  margin-top: 10%;
}

.submit-solution {
  margin-left: 7.75%;
}

.submit-solution-button {
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
}

.button {
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
  text-transform: uppercase;
  font-family: 'Noto Sans', sans-serif
}

.top-bar {
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
}

.alert-box {
  background: #f7f7f7;
  color: #333;
  border: none;
  border-left: 6px solid #008CBA;
  box-shadow: 0 5px 8px -6px rgba(0, 0, 0, 0.2); }
  .alert-box.success {
    background: #06B219;
    color: #333; }
  .alert-box.alert {
    background: #FF3B77;
    color: #333; }
  .alert-box.warning {
    background: #FF762E;
    color: #333; }
  .alert-box.info {
    background: #f7f7f7;
    color: #333; }
  .alert-box.small {
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    font-size: 0.75rem; }
    .alert-box.small .close {
      font-size: 1.5rem; }
  .alert-box.large {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    font-size: 2rem; }
    .alert-box.large .close {
      font-size: 3rem; }
  .alert-box .close {
    font-size: 2rem;
    line-height: 1.25rem; }
